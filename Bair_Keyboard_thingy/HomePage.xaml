<Window x:Class="Bair_Keyboard_thingy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="🅱️air's Keyboard Manager"
        Height="600"
        Width="1000"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#5865F2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4752C4"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#3C45A5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#ED4245"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C03537"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#F7F8FA"/>
            <Setter Property="BorderBrush" Value="#E3E5E8"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#5865F2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern ListBox Style -->
        <Style x:Key="ModernListBox" TargetType="ListBox">
            <Setter Property="Background" Value="#F7F8FA"/>
            <Setter Property="BorderBrush" Value="#E3E5E8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
        </Style>

        <!-- ListBox Item Style -->
        <Style x:Key="ModernListBoxItem" TargetType="ListBoxItem">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}"
                                BorderThickness="0">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#EBEDEF"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#E8E9FF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Background="#F2F3F5" CornerRadius="12">
        <Border.Effect>
            <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="20" ShadowDepth="0"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" Background="#5865F2" CornerRadius="12,12,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <TextBlock Text="🅱️air's Keyboard Manager" 
                               FontSize="18" 
                               FontWeight="SemiBold" 
                               Foreground="White" 
                               VerticalAlignment="Center" 
                               Margin="24,0,0,0"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="−" Width="46" Height="60" FontSize="20" Foreground="White" Background="Transparent" BorderThickness="0" Click="Minimize_Click" Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#4752C4"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Content="□" Width="46" Height="60" FontSize="16" Foreground="White" Background="Transparent" BorderThickness="0" Click="Maximize_Click" Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#4752C4"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Content="✕" Width="46" Height="60" FontSize="16" Foreground="White" Background="Transparent" BorderThickness="0" Click="Close_Click" Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="0,12,0,0">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#ED4245"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content -->
            <Grid Grid.Row="1" Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- ================= KEYBOARDS ================= -->
                <Border Grid.Column="0" Background="White" CornerRadius="12" Padding="20">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Opacity="0.08" BlurRadius="12" ShadowDepth="2"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Section Header -->
                        <TextBlock Grid.Row="0" 
                                   Text="⌨️ Keyboards" 
                                   FontSize="20" 
                                   FontWeight="SemiBold" 
                                   Foreground="#2C2F33"
                                   Margin="0,0,0,16"/>

                        <!-- Keyboard List -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <!-- Header Row -->
                                <Grid Margin="12,0,12,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Name" FontWeight="SemiBold" Foreground="#72767D" FontSize="12"/>
                                    <TextBlock Grid.Column="1" Text="Enabled" FontWeight="SemiBold" Foreground="#72767D" FontSize="12" Margin="0,0,8,0"/>
                                </Grid>

                                <!-- List -->
                                <ListBox x:Name="KeyboardList"
                                         Style="{StaticResource ModernListBox}"
                                         ItemContainerStyle="{StaticResource ModernListBoxItem}"
                                         HorizontalContentAlignment="Stretch">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="{Binding Name}" 
                                                           VerticalAlignment="Center" 
                                                           FontSize="14"
                                                           Foreground="#2C2F33"/>
                                                <CheckBox Grid.Column="1" 
                                                          VerticalAlignment="Center" 
                                                          IsChecked="{Binding IsEnabled}"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </StackPanel>
                        </ScrollViewer>

                        <!-- Keyboard Editor -->
                        <StackPanel Grid.Row="2" Margin="0,16,0,0">
                            <TextBlock Text="Keyboard Details" 
                                       FontWeight="SemiBold" 
                                       FontSize="14"
                                       Foreground="#2C2F33"
                                       Margin="0,0,0,8"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="85"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Text="Name:" VerticalAlignment="Center" Margin="0,0,0,6" Foreground="#4F545C" FontSize="12"/>
                                <TextBox Grid.Row="0" Grid.Column="1" x:Name="KeyboardNameBox" Style="{StaticResource ModernTextBox}" Margin="0,0,0,6" Height="32"/>

                                <TextBlock Grid.Row="1" Text="Layer count:" VerticalAlignment="Center" Margin="0,0,0,6" Foreground="#4F545C" FontSize="12"/>
                                <TextBox Grid.Row="1" Grid.Column="1" x:Name="LayerCountBox" Style="{StaticResource ModernTextBox}" Margin="0,0,0,6" Height="32"/>

                                <TextBlock Grid.Row="2" Text="Vendor ID:" VerticalAlignment="Center" Margin="0,0,0,6" Foreground="#4F545C" FontSize="12"/>
                                <TextBox Grid.Row="2" Grid.Column="1" x:Name="VendorIdBox" Style="{StaticResource ModernTextBox}" Margin="0,0,0,6" Height="32"/>

                                <TextBlock Grid.Row="3" Text="Product ID:" VerticalAlignment="Center" Margin="0,0,0,10" Foreground="#4F545C" FontSize="12"/>
                                <TextBox Grid.Row="3" Grid.Column="1" x:Name="ProductIdBox" Style="{StaticResource ModernTextBox}" Margin="0,0,0,10" Height="32"/>

                                <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal">
                                    <Button Content="Add" Style="{StaticResource ModernButton}" Width="75" Height="32" Click="Add_Keyboard_Button"/>
                                    <Button Content="Remove" Style="{StaticResource SecondaryButton}" Width="75" Height="32" Margin="8,0,0,0" Click="Remove_Keyboard_Button"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- ================= PROGRAMS ================= -->
                <Border Grid.Column="2" Background="White" CornerRadius="12" Padding="20">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Opacity="0.08" BlurRadius="12" ShadowDepth="2"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Section Header -->
                        <TextBlock Grid.Row="0" 
                                   Text="🖥️ Programs" 
                                   FontSize="20" 
                                   FontWeight="SemiBold" 
                                   Foreground="#2C2F33"
                                   Margin="0,0,0,16"/>

                        <!-- Program List -->
                        <ListBox Grid.Row="1"
                                 x:Name="ProgramList"
                                 Style="{StaticResource ModernListBox}"
                                 ItemContainerStyle="{StaticResource ModernListBoxItem}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Border Width="28" Height="28" Background="#5865F2" CornerRadius="6" Margin="0,0,10,0">
                                            <TextBlock Text="📄" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <TextBlock Text="{Binding}" 
                                                   VerticalAlignment="Center" 
                                                   FontSize="14"
                                                   Foreground="#2C2F33"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <!-- Program Editor -->
                        <StackPanel Grid.Row="2" Margin="0,16,0,0">
                            <TextBlock Text="Program Details" 
                                       FontWeight="SemiBold" 
                                       FontSize="14"
                                       Foreground="#2C2F33"
                                       Margin="0,0,0,8"/>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Text="Name:" Margin="0,0,0,4" Foreground="#4F545C" FontSize="12"/>
                                <TextBox Grid.Row="0" x:Name="ProgramNameBox" Style="{StaticResource ModernTextBox}" Margin="0,18,0,6" Height="32"/>

                                <TextBlock Grid.Row="1" Text="Path:" Margin="0,0,0,4" Foreground="#4F545C" FontSize="12"/>
                                <Grid Grid.Row="1" Margin="0,18,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="ProgramPathBox" Style="{StaticResource ModernTextBox}" Height="32"/>
                                    <Button Grid.Column="1" Content="Browse..." Style="{StaticResource ModernButton}" Margin="8,0,0,0" Height="32" Padding="12,0"/>
                                </Grid>

                                <StackPanel Grid.Row="2" Orientation="Horizontal">
                                    <Button Content="Add" Style="{StaticResource ModernButton}" Width="75" Height="32"/>
                                    <Button Content="Remove" Style="{StaticResource SecondaryButton}" Width="75" Height="32" Margin="8,0,0,0"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>